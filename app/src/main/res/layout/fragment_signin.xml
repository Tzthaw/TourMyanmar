<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_medium_2">
    <net.aungpyaephyo.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="သင့်ရဲ့ social အကောင့်ဝင်ရန်"
            android:textSize="@dimen/text_regular_2x"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_bold"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_gravity="center_horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google_icon"
                android:id="@+id/imageView2"
                android:layout_margin="@dimen/margin_medium"
                android:padding="@dimen/margin_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="@dimen/margin_medium"
                android:src="@drawable/facebook_icon"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium">
        <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/MMTextView3" android:layout_marginEnd="8dp"
                android:id="@+id/view"/>
        <net.aungpyaephyo.mmtextview.components.MMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="သို့"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold"
                android:id="@+id/MMTextView3" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/view"
                android:layout_marginStart="2dp" app:layout_constraintEnd_toStartOf="@+id/view2"
                android:layout_marginEnd="2dp"/>
        <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/MMTextView3"
                android:layout_marginStart="8dp" android:id="@+id/view2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:hint="အီးလ်မေး"
            android:textSize="@dimen/text_regular_2x"
            android:paddingLeft="@dimen/margin_medium"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:backgroundTint="@color/tour_blue"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:inputType="textEmailAddress"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular_2x"
            android:paddingLeft="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:hint="လျှို့ဝှက်နံပတ်"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:backgroundTint="@color/tour_blue"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:inputType="textPassword"/>
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tour_pink"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:text="အကောင့်ဝင်ရန်"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_medium"
            android:fontFamily="@font/quicksand_bold"/>
    <net.aungpyaephyo.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="လျှို့ဝှက်နံပတ်မေ့နေလျှင်?"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginTop="@dimen/margin_medium"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="အကောင့်မရှိဘူးလား?"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_2x"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginTop="@dimen/margin_xxlarge"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ယနေ့အကောင့်ဖွင့်လိုက်ပါ"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginTop="@dimen/margin_medium"/>
</LinearLayout>